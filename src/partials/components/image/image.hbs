<figure>
  <picture>
    <source
      srcset="/images/{{config.file}}_1280.webp 2x, /images/{{config.file}}_640.webp 1x"
      type="image/webp"
    />

    <img
      {{#if imgClass}} class="{{ imgClass }}"{{/if}}
      src="/images/{{ config.file }}_640.jpeg"
      srcset="/images/{{config.file}}_1280.jpeg 2x, /images/{{config.file}}_640.jpeg 1x"
      alt="{{ description }}"
      width="{{ config.width }}"
      height="{{ config.height }}"
    />
  </picture>
  {{#if config.hasDescription}}
    <figcaption 
      {{#if captionClass}} class="{{ captionClass }}"{{/if}}
    >
        {{ description }}
    </figcaption>
  {{/if}}
</figure>
