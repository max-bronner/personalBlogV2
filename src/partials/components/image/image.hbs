<figure>
  <picture>
    <source
      srcset="/images/{{srcBig}}.{{#if format}}{{format}}{{else}}webp{{/if}} 2x, /images/{{src}}.{{#if format}}{{format}}{{else}}webp{{/if}} 1x"
      type="image/webp"
    />

    <img
      {{#if imgClass}} class="{{ imgClass }}"{{/if}}
      src="/images/{{ src }}.{{#if format}}{{format}}{{else}}webp{{/if}}"
      srcset="/images/{{srcBig}}.{{#if format}}{{format}}{{else}}webp{{/if}} 2x, /images/{{src}}.{{#if format}}{{format}}{{else}}webp{{/if}} 1x"
      alt="{{ alt }}"
      width="{{ width }}"
      height="{{ height }}"
      {{#unless eagerLoaded}}loading="lazy"{{/unless}}
    />
  </picture>
  {{#if caption}}
    <figcaption 
      {{#if captionClass}} class="{{ captionClass }}"{{/if}}
    >
        {{ caption }}
    </figcaption>
  {{/if}}
</figure>
