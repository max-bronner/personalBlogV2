<figure>
  <picture>
    <source
      srcset="/images/{{file}}_1280.webp 2x, /images/{{file}}_640.webp 1x"
      type="image/webp"
    />

    <img
      {{#if class}}class="{{ class }}"{{/if}}
      src="/images/{{ config.file }}_640.jpeg"
      srcset="/images/{{config.file}}_1280.jpeg 2x, /images/{{config.file}}_640.jpeg 1x"
      alt="{{ description }}"
      width="{{ config.width }}"
      height="{{ config.height }}"
    />
  </picture>
  {{#if config.hasDescription}}
  <figcaption>{{ description }}</figcaption>
  {{/if}}
</figure>
