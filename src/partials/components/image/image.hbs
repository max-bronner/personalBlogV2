<figure>
  <picture>
    <source
      srcset="/images/{{srcBig}}.webp 2x, /images/{{src}}.webp 1x"
      type="image/webp"
    />

    <img
      {{#if imgClass}} class="{{ imgClass }}"{{/if}}
      src="/images/{{ src }}.jpeg"
      srcset="/images/{{srcBig}}.jpeg 2x, /images/{{src}}.jpeg 1x"
      alt="{{ alt }}"
      width="{{ width }}"
      height="{{ height }}"
      {{#unless eagerLoaded}}loading="lazy"{{/unless}}
    />
  </picture>
  {{#if caption}}
    <figcaption 
      {{#if captionClass}} class="{{ captionClass }}"{{/if}}
    >
        {{ caption }}
    </figcaption>
  {{/if}}
</figure>
