

<div class="table">
  {{#if title}}
    <div class="table__title">
      {{ title }}
    </div>
  {{/if}}
  <table>
    <thead>
      {{#each headers}}
        <tr>
          {{#each this}}
            <th 
              {{#if colspan}}colspan="{{colspan}}"{{/if}}
              {{#if rowspan}}rowspan="{{rowspan}}"{{/if}}
            >
              {{label}}
            </th>
          {{/each}}
        </tr>
      {{/each}}
    </thead>
  </table>
</div>